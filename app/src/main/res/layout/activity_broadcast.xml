<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_send_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_send_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_orden"
        app:layout_constraintStart_toEndOf="@id/btn_send_normal"
        app:layout_constraintTop_toTopOf="@id/btn_send_normal" />

    <Button
        android:id="@+id/btn_send_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送粘性广播"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_send_normal" />

</androidx.constraintlayout.widget.ConstraintLayout>