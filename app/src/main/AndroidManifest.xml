<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.demo">

    <application
        android:name=".base.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 首页类型 -->
        <activity
            android:name=".activity.CustomViewActivity"
            android:label="custom view demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.DesignActivity"
            android:label="design lib demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.DemoActivity"
            android:label="design lib demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.AnimationActivity"
            android:label="canvas demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- 自定义view类型 -->
        <activity
            android:name=".activity.custom_view.LuckActivity"
            android:label="sudoku luck">
            <intent-filter>
                <action android:name="com.android.demo.custom" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.custom_view.FlowTagActivity"
            android:label="flow tag layout">
            <intent-filter>
                <action android:name="com.android.demo.custom" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.custom_view.AuthCodeActivity"
            android:label="multi square editView"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden">
            <intent-filter>
                <action android:name="com.android.demo.custom" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.custom_view.BannerActivity"
            android:label="banner">
            <intent-filter>
                <action android:name="com.android.demo.custom" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.custom_view.ListItemActivity"
            android:label="list item">
            <intent-filter>
                <action android:name="com.android.demo.custom" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.custom_view.SelectViewActivity"
            android:label="select view">
            <intent-filter>
                <action android:name="com.android.demo.custom" />
            </intent-filter>
        </activity>

        <!-- design包的使用 -->
        <activity
            android:name=".activity.design.BottomSheetActivity"
            android:label="bottom sheet">
            <intent-filter>
                <action android:name="com.android.demo.design.demo" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.design.CoordinatorLayoutActivity"
            android:label="simple coordinator demo">
            <intent-filter>
                <action android:name="com.android.demo.design.demo" />
            </intent-filter>
        </activity>

        <!-- demo -->
        <activity
            android:name=".activity.demo.SeekBarActivity"
            android:label="seek bar demo">
            <intent-filter>
                <action android:name="com.android.demo.demo" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.demo.AidlActivity"
            android:label="aidl demo">
            <intent-filter>
                <action android:name="com.android.demo.demo" />
            </intent-filter>
        </activity>

        <service android:name=".service.LocalService" />

        <activity android:name=".activity.animation.RotationActivity"
            android:label="rotation canvas">
            <intent-filter>
                <action android:name="com.android.demo.animation" />
            </intent-filter>
        </activity>
    </application>

</manifest>